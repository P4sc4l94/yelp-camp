<% layout('layout/boilerplate')%>
<div class="formStyles content-container-pad">
  <h1>Profile</h1>
    <p style="text-align:center">
      <img src="<%= currentUser.image %>" width="150px" height="150px" alt="user profile image"/>
    </p>
    <hr>
  <h2>Username:</h2>
    <p class="fs-5 text"><%= currentUser.username %></p>
  <h2>Email:</h2>
    <p class='fs-5 text'><%= currentUser.email %></p>
  <h2>Password:</h2>
    <p class='fs-5 text'><i>Password cannot be updated at this time</i></p>
  <p><a href="/edit/<%= currentUser._id %>">Edit Account Info</a></p>
</div>
